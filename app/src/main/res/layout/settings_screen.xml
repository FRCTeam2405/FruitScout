<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundNavyBlue"
    android:orientation="vertical">

    <Button
        android:id="@+id/backButtonSettings"
        android:layout_width="252dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/outlineGreen"
        android:fontFamily="@font/batmfa__"
        android:text="@string/back_button_text"
        android:textColor="@color/blueOne"
        android:textSize="45sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.978" />

    <ScrollView
        android:layout_width="674dp"
        android:layout_height="721dp"
        android:contentDescription="@string/Content_Description_Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pitScoutingQuestionsTextView"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:baselineAligned="false"
                android:fontFamily="@font/batmfa__"
                android:gravity="center"
                android:text="@string/pit_scouting_questions_text"
                android:textAlignment="center"
                android:textColor="@color/safetyGreen"
                android:textSize="50sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/space1TextView"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/backgroundNavyBlue"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/addQuestionButton"
                    android:layout_width="70dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/safetyGreen"
                    android:fontFamily="@font/batmfa__"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@color/backgroundNavyBlue"
                    android:textSize="80sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <TextView
                    android:id="@+id/space2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/backgroundNavyBlue"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/batmfa__"
                    android:text="@string/placeholder_text"
                    android:textColor="@color/backgroundNavyBlue"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/space3TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/backgroundNavyBlue" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>