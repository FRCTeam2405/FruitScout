<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fruitportrobotics.fruitscoutalpha">

    <supports-screens
        android:largeScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true"
        android:normalScreens="true"
        />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FruitScoutAlpha"
        tools:targetApi="31">
        <activity
            android:name=".ActivityMatchScouting"
            android:exported="true"
            android:label="@string/title_match_scouting_screen"
            android:theme="@style/Theme.FruitScoutAlpha.NoActionBar" />
        <activity
            android:name=".ActivityPitScouting"
            android:exported="true"
            android:theme="@style/Theme.FruitScoutAlpha.NoActionBar" />
        <activity
            android:name=".ActivityScoutingTypeSelection"
            android:exported="true"
            android:theme="@style/Theme.FruitScoutAlpha.NoActionBar" />
        <activity
            android:name=".ActivitySettingsScreen"
            android:exported="true"
            android:theme="@style/Theme.FruitScoutAlpha.NoActionBar" />
        <activity
            android:name=".ActivityTitleScreen"
            android:exported="true"
            android:theme="@style/Theme.FruitScoutAlpha.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>